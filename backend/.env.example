# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment (development or production)
# - development: Uses SQLite automatically
# - production: Uses PostgreSQL (requires DATABASE_URL)
DJANGO_ENV=development

# Database Configuration (PRODUCTION ONLY)
# Use DATABASE_URL for PostgreSQL connection string
# Format: postgresql://username:password@hostname:port/database_name
# Example: postgresql://myuser:mypass@db.example.com:5432/trendify_prod
# DATABASE_URL=postgresql://user:password@hostname:5432/database_name

# Alternative: Manual PostgreSQL Configuration (PRODUCTION ONLY)
# Only needed if not using DATABASE_URL
# DB_NAME=trendify_prod
# DB_USER=postgres
# DB_PASSWORD=your-database-password
# DB_HOST=localhost
# DB_PORT=5432

# CORS Settings (Frontend URLs that can access the API)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Security Settings
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Production Security Settings (uncomment for production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True